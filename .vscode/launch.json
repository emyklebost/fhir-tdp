    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch JUnit console standalone",
            "request": "launch",
            "mainClass": "org.junit.platform.console.ConsoleLauncher",
            "classPaths": ["${workspaceFolder}/engine.jar", "${workspaceFolder}/junit-standalone.jar"],
            "args": [
                "-d", "src/test/resources",
                "--reports-dir", "test-reports"
            ],
        }
    ]
}